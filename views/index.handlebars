<div class="container">
  <h1>Eat-da-Burger!</h1>
  <img src="/assets/img/burgerClipArt.png" id="burgerClipArt">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-4" id="burgersToEat">
      <h2>Burgers to eat!</h2>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST" id="devourItForm">
                <input id="burgerDisplay" type="hidden" name="devoured" value="true">
                <button type="submit" id="devourItButton">Devour it!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-4" id="burgersDevoured">
      <h2>Devoured Burgers!</h2>

      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST" id="orderMoreForm">
                <input type="hidden" name="devoured" value="false">
                <button type="submit" id="orderAnotherButton">Order Another!</button>
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h2>Add a Burger</h2>
      <form class="create-update-form" action="/" method="POST" id="updateForm">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <div class="form-group">
          <label for="slee">Devoured?</label><br>
          {{!-- <input type="radio" name="devoured" value="1" checked> Devoured!<br> --}}
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="col-md-3"></div>  
  </div>
</div>